{
    "name": "lightsaml/lightsaml-idp",
    "license": "GPL-3.0+",
    "type": "library",
    "description": "Light SAML2 IDP php library",
    "autoload": {
        "psr-0": { "LightSaml\\Idp\\": "src/" }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "d:/www/home/lightSAML/lightSAML"
        }
    ],
    "require": {
        "php": ">=5.5.1",
        "lightsaml/lightsaml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "monolog/monolog": "~1.3",
        "squizlabs/php_codesniffer": "~2.0"
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "post-update-cmd": [
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": ["app/lightsaml"],
    "prefer-stable": true,
    "minimum-stability": "dev"
}
